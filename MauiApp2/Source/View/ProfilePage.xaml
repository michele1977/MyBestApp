<?xml version="1.0" encoding="utf-8" ?>
<ContentView  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.Source.View.ProfilePage"   >
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" HorizontalOptions="Center">

            <!-- Foto -->
            <Frame Padding="0" HasShadow="False" BorderColor="Transparent" BackgroundColor="Transparent">
                <Image x:Name="DoctorImage"
                       HeightRequest="150"
                       WidthRequest="150"
                       Aspect="AspectFill"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                        />
            </Frame>

            <!-- Nome -->
            <Label x:Name="DoctorNameLabel"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center" />

            <!-- Specializzazione -->
            <Label x:Name="DoctorSpecialtyLabel"
                   FontSize="18"
                   TextColor="#AAAAAA"
                   HorizontalOptions="Center" />

            <BoxView HeightRequest="1" Color="#333" WidthRequest="200" HorizontalOptions="Center" />

            <!-- Bio -->
            <Label Text="Biografia"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="White" />
            <Label x:Name="DoctorBioLabel"
                   FontSize="14"
                   TextColor="#DDDDDD" />

            <!-- Contatti -->
            <Label Text="Contatti"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="White" />

