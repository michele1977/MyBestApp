                <Label Text="ðŸ“ž" FontSize="16" />
                <Label x:Name="DoctorPhoneLabel"
                       FontSize="14"
                       TextColor="#DDDDDD" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentView>